# ambiente
FLASK_ENV=development
DEBUG=True

# app security
SECRET_KEY=replace_with_a_real_secret
SECURITY_SALT=replace_salt

# banco
DATABASE_URL=postgresql+psycopg2://user:password@dbhost:5432/minha_base
TEST_DATABASE_URL=sqlite:///:memory:

# bot
BOT_SECRET_KEY=replace_bot_secret
BOT_REQUEST_SIGNATURE_HEADER=X-Bot-Signature

# jwt (opcional)
JWT_SECRET=replace_jwt_secret
JWT_EXP_SECONDS=3600

# extras
TIMEZONE=America/Fortaleza
SENTRY_DSN=
CELERY_BROKER_URL=redis://localhost:6379/0
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
